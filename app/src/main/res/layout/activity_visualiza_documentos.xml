<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PLAY_PARENT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisualizaDocumentosActivity"
    android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_visualiza_documentos"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:titleTextColor="@color/colorTexts"
            app:subtitleTextColor="@color/colorTexts"
            android:background="@color/colorPrimary"
            app:titleMarginStart="0dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rg_batman"
            />

</LinearLayout>