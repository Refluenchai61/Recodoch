<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forms.FormularioTipoUsuarioActivity"
    android:orientation="vertical"
    app:titleTextAppearance="@style/Toolbar.TitleText"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_form_tipo_usuario"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:titleTextColor="@color/colorTexts"
        android:background="@color/colorPrimary"
        app:titleMarginStart="32dp"/>

    <EditText
        android:id="@+id/form_nome_tipo_usuario"
        android:hint="@string/nome"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorLine"
        android:theme="@style/MyEditTextStyle2"
        />

    <EditText
        android:id="@+id/form_descricao_tipo_usuario"
        android:hint="@string/descricao"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorLine"
        android:theme="@style/MyEditTextStyle2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/form_salvar_tipo_usuario"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/check"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="20px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/fundobotao"
            />
        <!--
            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:drawableLeft="@drawable/outline_input_white_18dp"
                android:paddingLeft="20px"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:elevation="6dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/fundobotao"
                android:stateListAnimator="@null"
                android:id="@+id/ProcessaDoc"/>-->

    </RelativeLayout>
</LinearLayout>
